# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_IDS=your_guild_id_1,your_guild_id_2  # Optional: comma-separated for instant command sync

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# OpenAI Configuration (for embeddings)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017  # Use 'mongodb' (service name) in Docker, 'localhost' locally
MONGODB_DATABASE=pf2e_bot

# Bot Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
ENVIRONMENT=development  # development, production

# Rate Limiting (for /ask command)
ASK_RATE_LIMIT_REQUESTS=5
ASK_RATE_LIMIT_WINDOW_SECONDS=600  # 10 minutes
